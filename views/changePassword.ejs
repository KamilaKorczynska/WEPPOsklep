<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <title>Zmiana hasła</title>
    <style>
    html, body, form {
        height: 100%;
        overflow: hidden;
    }
    form {
        display : flex;
        justify-content : center;
        align-items : center;
    }
    #login {
        padding : 20px;
        border : 1px solid black;
    }
    #login div {
        overflow : auto;
    }
    #login input {
        float : right;
    }
    button {
        clear : both;
    }

    .message {
        color : red;
    }
    </style>
</head>
<body>
    <form method="POST">
    <div id='login'>
        <div>Zmiana hasła</div>
        <div>
            <input type='password' name='txtOldPwd' required />
            <label>Stare hasło:</label>
        </div>
        <div>
            <input type='password' name='txtNewPwd1' required />
            <label>Nowe hasło:</label>
        </div>
        <div>
            <input type='password' name='txtNewPwd2' required />
            <label>Powtórz nowe hasło:</label>
        </div>
        <div>
            <button>Zmień hasło</button>
        </div>
        <% if ( locals.message ) { %>
            <div class='message'>
                <%= locals.message %>
            </div>
        <% } %>
    </div>
    </form>
</body>
</html>
